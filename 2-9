<body>
    <script> 
        let a = prompt("Nhập cạnh a:");
        let b = prompt("Nhập cạnh b:");
        let c = prompt("Nhập cạnh c:");
        if (a + b > c && a + c > b && b + c > a) {
            document.write("Ba cạnh nhập vào là cạnh của một tam giác.");
        } else {
            document.write("Ba cạnh nhập vào không phải là cạnh của một tam giác.");
        }
    </script>
</body>
