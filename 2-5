    <script>
        let a = prompt("Nhập cạnh kề thứ nhất của tam giác vuông:");
        let b = prompt("Nhập cạnh kề thứ hai của tam giác vuông:");
        let s = 0.5 * a * b;
        document.write("Diện tích tam giác vuông là: " + s);
    </script>
