        }
    </style>
</head>
<body>
    <script> 
        function tinhGiaiThua(n) {
            let giaiThua = 1;
            for (let i = 1; i <= n; i++) {
            giaiThua *= i;
            }
            document.write("Giai thừa của " + n + " là: " + giaiThua + "<br>");
            }

            let n = parseInt(prompt("Nhập một số nguyên dương để tính giai thừa:"));
            if (n >= 0) {
                tinhGiaiThua(n);
            } else {
                document.write("Vui lòng nhập một số nguyên dương.");
            }
    </script>
</body>
</html>
