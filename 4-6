<body>
    <script> 
        function tongChiaHetCho7(n) {
            let sum = 0;
            let count = 0;
            let number = 0;

        while (count < n) {
            if (number % 7 === 0) {
                sum += number;
                count++;
            }
            number++;
            }

            return sum;
        }   

        document.write("Tổng của 30 số chia hết cho 7 đầu tiên: " + tongChiaHetCho7(30));
    </script>
</body>
