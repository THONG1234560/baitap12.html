<body>
    <script> 
        let nhietDo = parseFloat(prompt("Nhập nhiệt độ hiện tại:"));
            if (nhietDo > 100) {
                document.write("Nhiệt độ quá cao! Hãy giảm nhiệt độ.");
            } else if (nhietDo < 20) {
                document.write("Nhiệt độ quá thấp! Hãy tăng nhiệt độ.");
            } else {
                document.write("Nhiệt độ ở mức bình thường.");
            }
    </script>
</body>
</html>
